//getNumber
public int getNumber(int num, String type )
  {
      int result;
      double temp;
      if(type.equalsIgnoreCase("byte")==true)
      {
         if(num>0)
         {
            temp=num/128;
            if(temp%2==0)
            {
                result=num%128;
            }
           else
            {
               result=num%128-128;
            }
       }
     else
       {
          temp=Math.floor(num/128);
          if(temp%2==0)
           {
             result=num%128;
           }
           else if(num%128==0 && temp%2!=0)
           {
             result=-128;
           }
           else
           {
             result=num%128+128;
           }
      }
       return result;
    } 
    else
    {
        if(num>0)
        {
           temp=num/32768;
           if(temp%2==0)
            {
                result=num%32768;
            }
            else
            {
                result=num%32768-32768;
            }
        }
        else
        {
            temp=Math.floor(num/32768);
            if(temp%2==0)
            {
                result=num%32768;
            }
            else if(num%32768==0 && temp%2!=0)
            {
               result=-32768;
            }
            else
            {
                result=num%32768+32768;
            }
        }
        return result;
  }
}
