//getShort
public int getShort(int num)
  {
        int result;
        double temp;
        if(num>0)
        {
           temp=num/32768;
           if(temp%2==0)
            {
                result=num%32768;
            }
            else
            {
                result=num%32768-32768;
            }
        }
        else
        {
            temp=Math.floor(num/32768);
            if(temp%2==0)
            {
                result=num%32768;
            }
            else if(num%32768==0 && temp%2!=0)
            {
               result=-32768;
            }
            else
            {
                result=num%32768+32768;
            }
        }
        return result;
  }
