class Practical4{
//getByte
public int getByte(int num)
   {
      int result;
      double temp;
      if(num>0)
       {
            temp=num/128;
            if(temp%2==0)
            {
                result=num%128;
            }
           else
            {
               result=num%128-128;
            }
       }
     else
       {
          temp=Math.floor(num/128);
          if(temp%2==0)
           {
             result=num%128;
           }
           else if(num%128==0 && temp%2!=0)
           {
             result=-128;
           }
           else
           {
             result=num%128+128;
           }
      }
       return result;
}
